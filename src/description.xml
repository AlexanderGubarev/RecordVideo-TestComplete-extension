<?xml version="1.0" encoding="UTF-8"?>
<ScriptExtensionGroup Name = "VideoRecorder">

  <Category Name="Log Actions">

    <ScriptExtension Name = "VideoRecorder" Author = "SmartBear Software" Version = "1.3" HomePage = "smartbear.com">
      <Script Name = "script.sj" InitRoutine="Initialize" FinalRoutine="Finalize">
            <RuntimeObject Name = "VideoRecorder" Icon="VideoStart-16.png">
				<Method Name="Start" Routine="Start">
				Start video recording. Choose quality of recording video: "Low", "Normal", "High". If no parameter - "Normal" quality will be chosen.
				</Method>
		        <Method Name="Stop" Routine="Stop">
				Stop video recording.
				</Method>
			<Description>
            Record video of test playback via VLC video player.
            </Description>
            </RuntimeObject>

			<KDTOperation Name="Start Video Recording" Category="Logging" Icon="VideoStart-16.png">
			<Parameters>
			<Parameter Name="VideoQuality" DefaultValue="Normal">The quality of recording video.</Parameter>
			</Parameters>
			<Columns>
			<Column Name="Item" Value="Start Video Recording" />
			<Column Name="Value" Editable="True" EditorType="Parameters"/>
			<Column Name="Description" GetValue="StartRecording_GetDescription"/>
			</Columns>
            <Events>
            <Event Name="OnCreate" Routine="StartRecording_OnCreate" />
			<Event Name="OnSetup" Routine="StartRecording_OnSetup" />
            <Event Name="OnExecute" Routine="StartRecording_OnExecute" />
            </Events>			
			</KDTOperation>
			
			<KDTOperation Name="Stop Video Recording" Category="Logging" Icon="VideoStop-16.png">
			<Columns>
			<Column Name="Item" Value="Stop Video Recording" />
			<Column Name="Description" GetValue="StopRecording_GetDescription"/>
			</Columns>
            <Events>
            <Event Name="OnCreate" Routine="StopRecording_OnCreate" />
			<Event Name="OnSetup" Routine="StopRecording_OnSetup" />
            <Event Name="OnExecute" Routine="StopRecording_OnExecute" />
            </Events>			
			</KDTOperation>
			</Script>
      <Description>
        Provides KDT operation and scripting object for recording video of test run via VLC video player.
      </Description>
    </ScriptExtension>

  </Category>

</ScriptExtensionGroup>
